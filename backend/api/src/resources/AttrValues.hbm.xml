<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.mycompany.amm.model.AttrValues" table="AttrValues" >
        <id name="idValues"  type="java.lang.Integer">
            <column name="idValues" />
            <generator class="identity" />
        </id>
        
        <many-to-one name="attribute" class="com.mycompany.amm.model.Attributes" fetch="select">
            <column name="idAttributes" not-null="true" />
        </many-to-one>
        
        <property name="name" type="string">
            <column name="name" length="45" not-null="true" />
        </property>
          
        
    </class>
</hibernate-mapping>
