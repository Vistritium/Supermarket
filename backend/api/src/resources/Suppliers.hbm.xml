<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.mycompany.amm.model.Suppliers">
        <id name="idSuppliers">
            <column name="idSuppliers" />
            <generator class="identity" />
        </id>
        
        <property name="name" type="string">
            <column name="name" length="45" not-null="true" />
        </property>
        
               
        <set name="products" table="products_has_suppliers" 
        	inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="idSuppliers" not-null="true" />
            </key>
            <many-to-many entity-name="com.mycompany.amm.model.Products">
                <column name="idProducts" not-null="true" />
            </many-to-many>
        </set>
        
    </class>
</hibernate-mapping>
